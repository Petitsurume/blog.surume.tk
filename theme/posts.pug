each post in posts
    article.panel.panel-default(id=post.id)
        .panel-body
            h2: a(href=post.url)= post.title
            small
                span.glyphicon.glyphicon-time
                |  #{post.datetime}
                span.glyphicon.glyphicon-user
                |  
                    a(href=post.author.url) #{post.author.title}
                span.glyphicon.glyphicon-folder-open
                |  
                    for tag in post.tags
                    a(href=tag.url) #{tag.title}
            != post.html